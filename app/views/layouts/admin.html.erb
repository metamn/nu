<!DOCTYPE html>
<html>
<head>
  <title>Nu</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
  <div id="header">
    <%= render "admin/shared/header" %>
  </div>
  
  <div id="content">
    <%= controller.controller_name %>
    <div class="menu">
      <%= render_navigation :level => 2 %>
    </div>
    <div class="clear"></div>
    <hr/>
    <%= yield %>
  </div>

  <div id="footer">
    <%= render "admin/shared/footer" %>
  </div>

</body>
</html>
